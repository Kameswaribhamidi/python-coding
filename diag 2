#matrix diagnol sum leetcode
n=int(input())
a=[]
s=0
for i in range(0,n):
  l=[]
  for j in range(0,n):
    x=int(input())
    l.append(x)
  a.append(l)
for i in range(0,n):
  for j in range(0,n):
    if i==j:
      s=s+a[i][j]  
    elif i+j==n-1:
      s=s+a[i][j]
print(s)

